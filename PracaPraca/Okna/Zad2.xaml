<Window x:Class="PracaPraca.Okna.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracaPraca.Okna"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>

        <Border Background="red" Grid.Column="0" Grid.Row="0"></Border>
        <Border Background="blue" Grid.Column="1" Grid.RowSpan="2" Grid.Row="0"></Border>
        <Border Background="blue" Grid.Column="0" Grid.Row="1"></Border>
        <Border Background="Yellow" Grid.Column="2" Grid.RowSpan="3" Grid.Row="0"></Border>
        <Border Background="Yellow" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2"></Border>
        <Border Background="green" Grid.Column="3" Grid.Row="0" Grid.RowSpan="4"></Border>
        <Border Background="green" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="3"></Border>



    </Grid>
</Window>
